@model VUA.Core.Models.Contact
<div class="site-section ftco-subscribe-1 site-blocks-cover pb-4" style="background-image: url('/AcTemp/images/bg_1.jpg')">
    <div class="container">
        <div class="row align-items-end">
            <div class="col-lg-7">
                <h2 class="mb-0">Contact</h2>
                <p>Lorem ipsum dolor sit amet consectetur adipisicing.</p>
            </div>
        </div>
    </div>
</div>


<div class="custom-breadcrumns border-bottom">
    <div class="container">
        <a asp-action="Index">Home</a>
        <span class="mx-3 icon-keyboard_arrow_right"></span>
        <span class="current">Contact</span>
    </div>
</div>
<form method="post" asp-controller="Home" asp-action="Contact" id="myForm">
    <div class="site-section">
        <div class="container">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6 form-group">
                   
                    <label asp-for="FirsName">First Name</label>
                    <input asp-for="FirsName" type="text" id="fname" class="form-control form-control-lg">
                    <span asp-validation-for="FirsName" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group">
                    <label asp-for="LastName">Last Name</label>
                    <input asp-for="LastName" type="text" id="lname" class="form-control form-control-lg">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 form-group">
                    <label asp-for="Email">Email Address</label>
                    <input asp-for="Email" type="text" placeholder="Example@email.ceo" class="form-control form-control-lg">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group">
                    <label asp-for="PhoneNumber">Tel. Number</label>
                    <input asp-for="PhoneNumber" placeholder="(00)-999-999999999" type="tel" id="tel" class="form-control form-control-lg">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 form-group">
                    <label asp-for="Message">Message</label>
                    <textarea asp-for="Message" placeholder="type something here!" id="message" cols="30" rows="10" class="form-control"></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <input type="submit" value="Send Message" class="btn btn-primary btn-lg px-5">
                </div>
            </div>
        </div>
    </div>
</form>




