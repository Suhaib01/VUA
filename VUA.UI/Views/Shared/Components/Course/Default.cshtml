@model IEnumerable<VUA.Core.Models.Course>
@if (ViewBag.Co?.ToString() == "True")
{
    <div class="site-section ftco-subscribe-1 site-blocks-cover pb-4" style="background-image: url('/AcTemp/images/bg_1.jpg')">
        <div class="container">
            <div class="row align-items-end">
                <div class="col-lg-7">
                    <h2 class="mb-0">Courses</h2>
                    <p>Lorem ipsum dolor sit amet consectetur adipisicing.</p>
                </div>
            </div>
        </div>
    </div>
    <div class="custom-breadcrumns border-bottom">
        <div class="container">
            <a asp-action="Index">Home</a>
            <span class="mx-3 icon-keyboard_arrow_right"></span>
            <span class="current">Courses</span>
        </div>
    </div>
    <div class="site-section">
        <div class="container">
            <div class="row">
                @foreach (var corse in Model)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="course-1-item">
                            <figure class="thumnail">
                                <a href="course-single.html"><img src="~/@corse.CourseImage" alt="Image" class="img-fluid"></a>
                                <div class="price">$@corse.CoursePrice</div>
                                <div class="category"><h3>@corse.CourseName</h3></div>
                            </figure>
                            <div class="course-1-content pb-4">
                                <h2>@corse.CourseDescription</h2>
                                <div class="rating text-center mb-3">
                                    <span class="icon-star2 text-warning">@corse.CourseDuration</span>
                                </div>
                                <p class="desc mb-4">@corse.SubDescription</p>
                                <p><a asp-area="Identity" asp-controller="Account" asp-action="Register" class="btn btn-primary rounded-0 px-4">Enroll In This Course</a></p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}
else
{
    <div class="site-section">
        <div class="container">
            <div class="row mb-5 justify-content-center text-center">
                <div class="col-lg-6 mb-5">
                    <h2 class="section-title-underline mb-3">
                        <span>Popular Courses</span>
                    </h2>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Officia, id?</p>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="owl-slide-3 owl-carousel">
                        @foreach (var corse in Model)
                        {
                            <div class="course-1-item" style="height:750px">
                                <figure class="thumnail">
                                    <a href="course-single.html"><img src="~/@corse.CourseImage" style="width:350px; height:200px" alt="Image" class="img-fluid"></a>
                                    <div class="price">$@corse.CoursePrice</div>
                                    <div class="category"><h3>@corse.CourseName</h3></div>
                                </figure>
                                <div class="course-1-content pb-4">
                                    <h2>@corse.CourseDescription</h2>
                                    <div class="rating text-center mb-3">
                                        <span class="icon-star2 text-warning">@corse.CourseDuration</span>
                                    </div>
                                    <p class="desc mb-4">@corse.SubDescription</p>
                                    <p><a asp-area="Identity" asp-controller="Account" asp-action="Register" class="btn btn-primary rounded-0 px-4">Enroll In This Course</a></p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}
