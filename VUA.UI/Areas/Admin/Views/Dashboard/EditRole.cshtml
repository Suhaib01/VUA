@model VUA.Core.Models.ViewModels.EditRoleViewModel
@{
    ViewData["Title"] = "CreatRole";
}

<h1>Edit Role</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditRole" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleId" class="control-label">Role Name</label>
                <input asp-for="RoleId" readonly class="form-control"/>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label">Role Name</label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Creat" class="btn btn-primary" />
                <a asp-action="RolesList">Back to List</a>
            </div>
        </form>
    </div>
    <div class="col-m-4">
        <div class="card">
            <div class="card-header">
            </div>
            <div class="card-body">
                @if (Model.Users!.Any())
                {
                    @foreach (var user in Model.Users!)
                    {
                        <span>@user</span>

                        <br />
                    }
                }
                else
                {
                    <div class="text text-danger">No Usres In This Role !</div>
                }

            </div>
            <div class="card-footer">
                <a asp-action="UserRole" asp-route-id="@Model.RoleId" class="btn btn-primary">Add/Remve user</a>
            </div>
        </div>
    </div>
</div>



