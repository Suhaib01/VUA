@model VUA.Core.Models.AppllicationUser
@if (Model.IDFrontImage != null)
{

    <div id="overlay"></div>
    <div id="floating-screen" class="page-header">
        <div class="row">
            <img src="@Model.CertificateImage" alt="avatar"
                 class="m-2" style="width: 450px; height:170px">
            <a asp-action="Profile" class="btn btn-success mt-1">Close</a>
        </div>

    </div>

    <style>
        /* Styling for the overlay */
        #overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.9); /* Semi-transparent black */
            z-index: 1; /* Place it above the rest of the content */
            display: none; /* Initially hidden */
        }

        /* Styling for the floating screen */
        #floating-screen {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            height: 270px;
            width: 500px;
            background-color: white;
            border: 1px solid #ccc;
            padding: 20px;
            z-index: 2; /* Place it above the overlay */
            display: none; /* Initially hidden */
        }

    </style>
    <script>
        function openFloatingScreen() {
            document.getElementById('overlay').style.display = 'block';
            document.getElementById('floating-screen').style.display = 'block';
        }

        // Function to close the floating screen and hide the overlay
        function closeFloatingScreen() {
            document.getElementById('overlay').style.display = 'none';
            document.getElementById('floating-screen').style.display = 'none';

        }
        openFloatingScreen();

    </script>

}
