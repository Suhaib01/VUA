@using Microsoft.AspNetCore.Identity;
@using VUA.Core.Models;
@model IEnumerable<VUA.Core.Models.CourseWeeks>
@inject UserManager<AppllicationUser> _UserInManger
@{
    var user = _UserInManger.FindByEmailAsync(User.Identity!.Name!).Result;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.17.0/font/bootstrap-icons.css" rel="stylesheet">
    <title>Your Topic Page</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8f8f8;
            color: #333;
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        h1 {
            color: #333;
        }
        header {
            background-color: #007BFF;
            color: #fff;
            padding: 20px;
            text-align: center;
        }

        main {
            max-width: 800px;
            margin: 20px auto;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            border-radius: 8px;
        }

        #video-container {
            position: relative;
            padding-bottom: 5%; /* 16:9 aspect ratio for responsive video */
            margin-top: 20px;
        }

        #video {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }

        #description {
            
            line-height: 1.6;
        }

        #viewer {
            width: 100%;
            height: 500px;
        }

        .textarea{
            width: 100%;
            height:300px;
            border:none;
            
        }
    </style>
</head>
<body>
    @if(user!.StudantOrTeacher == "Studant")
    {
                     <!-- Use asp-for to bind the value to the model property -->
                                               
        @foreach (var item in Model)
        {
            <header>
                <h1>@item.Week!.SubjectName</h1>
            </header>

            <main>

                <div id="video-container">
                    <!-- Replace the video URL with your own -->
                    <video width="640" height="360" controls>
                        <source src="~/uploads/@item.Week.ViduoUrl" type="video/mp4">
                        Your browser does not support the video tag.
                    </video>
                </div>
                <h2>Description</h2>


                <textarea class="textarea" disabled> @item.Week.Description</textarea>
               
                <br>
                <a class="btn btn-block btn-secondary" href="@Url.Content($"~/uploads/{item.Week.Subjectfile}")" download>
                    Description File
                </a>
            </main>
            <br />
            
        }
        <a asp-action="MyCourse" class="btn btn-block btn-outline-primary">Back</a>
           
    }else
    {
        @foreach (var item in Model)
        {
            <header>
                <h1>@item.Week!.SubjectName</h1>
            </header>

            <main>

                <div id="video-container">
                    <video width="750" height="360" controls>
                        <source src="~/uploads/@item.Week.ViduoUrl" type="video/mp4">
                        Your browser does not support the video tag.
                    </video>
                </div>

                
                    <h2>Description</h2>
                    <textarea class="textarea" disabled> @item.Week.Description</textarea>
             
                <br>
                <a class="btn btn-block btn-secondary" href="@Url.Content($"~/uploads/{item.Week.Subjectfile}")" download>
                    Description File
                </a>

            </main>


            <a asp-action="DeleteWeek" asp-route-courseId="@item.CourseId" asp-route-weekId="@item.WeekId" class="btn btn-block btn-outline-danger">Delete Week</a>

           
            <br />
                
        }
            <a asp-action="TeacherCourses" class="btn btn-block btn-outline-primary">Back</a>

    }



    <script>
        var viewer = new Viewer(document.getElementById('viewer'), {
            navbar: false,
            toolbar: {
                zoomIn: 4,
                zoomOut: 4,
                oneToOne: 4,
                reset: 4,
                prev: 0,
                play: {
                    show: 0,
                    size: 'large',
                },
                next: 0,
                rotateLeft: 4,
                rotateRight: 4,
                flipHorizontal: 4,
                flipVertical: 4,
            },
        });
    </script>

</body>
</html>
