@model VUA.Core.Models.ViewModels.ChangePasswordViweModel
@{
    ViewData["Title"] = "ChangePassword";
}

<div class="container mt-5 mb-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card ">
                    <div class="card-body border-0 border-radius-xl my-3 fixed-start ms-3">
                        <h6 class="text-center">Change Password</h6>
                        <hr>
                        <form asp-action="ChangePassword" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="All" class="text text-danger"></div>
                            <div class="form-group">
                                <label asp-for="CurrenPassword"></label>
                                <input asp-for="CurrenPassword"  class="form-control">
                            </div>
                            <div class="form-group">
                                <label asp-for="NewPassword"></label>
                                <input asp-for="NewPassword"  class="form-control">
                            </div>
                            <div class="form-group">
                                <label asp-for="ConfirmNewPassword"></label>
                                <input asp-for="ConfirmNewPassword"  class="form-control">
                            </div>
                        <button type="submit" class="btn btn-primary mt-2">Change</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
</div>    
@if (ViewBag.IsSuccess == true)
{

    <div id="overlay"></div>
    <div id="floating-screen" class="border-0 border-radius-xl">
        <div class="row">
            <h5>Password has been Changed Succssufuly</h5>
            <a asp-action="Profile" class="btn btn-success mt-6">Close</a>
        </div>

    </div>

    <style>
        /* Styling for the overlay */
        #overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.9); /* Semi-transparent black */
            z-index: 1; /* Place it above the rest of the content */
            display: none; /* Initially hidden */
        }

        /* Styling for the floating screen */
        #floating-screen {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            height: 170px;
            width: 500px;
            background-color: white;
            border: 1px solid #ccc;
            padding: 20px;
            z-index: 2; /* Place it above the overlay */
            display: none; /* Initially hidden */
        }

    </style>
    <script>
        function openFloatingScreen() {
            document.getElementById('overlay').style.display = 'block';
            document.getElementById('floating-screen').style.display = 'block';
        }

        // Function to close the floating screen and hide the overlay
        function closeFloatingScreen() {
            document.getElementById('overlay').style.display = 'none';
            document.getElementById('floating-screen').style.display = 'none';

        }
        openFloatingScreen();

    </script>

}


       