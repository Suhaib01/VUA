@using Microsoft.AspNetCore.Identity;
@using VUA.Core.Models;
@inject SignInManager<AppllicationUser> _signInMaanager
@inject UserManager<AppllicationUser> _userMaanager

<!DOCTYPE html>

<html>
<head>
	<head>
		<!-- Basic Page Info -->
		<meta charset="utf-8">
		<title>DeskApp - Bootstrap Admin Dashboard HTML Template</title>

		<!-- Site favicon -->
		<link rel="apple-touch-icon" sizes="180x180" href="~/YiniDashboard/vendors/images/VUAwithoutBG.png">
		<link rel="icon" type="image/png" sizes="32x32" href="~/YiniDashboard/vendors/images/VUAwithoutBG.png">
		<link rel="icon" type="image/png" sizes="16x16" href="~/YiniDashboard/vendors/images/VUAwithoutBG.png">

		<!-- Mobile Specific Metas -->
		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

		<!-- Google Font -->
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
		<!-- CSS -->
		<link rel="stylesheet" type="text/css" href="~/YiniDashboard/vendors/styles/core.css">
		<link rel="stylesheet" type="text/css" href="~/YiniDashboard/vendors/styles/icon-font.min.css">
		<link rel="stylesheet" type="text/css" href="~/YiniDashboard/src/plugins/datatables/css/dataTables.bootstrap4.min.css">
		<link rel="stylesheet" type="text/css" href="~/YiniDashboard/src/plugins/datatables/css/responsive.bootstrap4.min.css">
		<link rel="stylesheet" type="text/css" href="~/YiniDashboard/vendors/styles/style.css">
		<style>
			.header {
				position: fixed;
				top: 0;
				left: 0;
				width: 100%;
				height:90px;
				background-color: #ffffff; /* Set your desired background color */
				z-index: 1000; /* Adjust the z-index as needed */
			}

			/* Adjust the padding or margin as needed */
			.header-left,
			.header-right {
				padding: 10px;
			}

		</style>
		<!-- Global site tag (gtag.js) - Google Analytics -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=UA-119386393-1"></script>
		<script>
			window.dataLayer = window.dataLayer || [];
			function gtag() { dataLayer.push(arguments); }
			gtag('js', new Date());

			gtag('config', 'UA-119386393-1');
		</script>
	</head>
</head>
<body>
	<div class="header">
		<div class="header-left">
			<a asp-area="" asp-controller="Home" asp-action="Index">
				<img src="~/YiniDashboard/vendors/images/logo2.png" style="height:90px" alt="">
			</a>
		</div>
		<div class="header-right">
			<div class="dashboard-setting user-notification">
				
			</div>
			
			<div class="user-info-dropdown">
				<div class="dropdown">
					<a class="dropdown-toggle" href="#" role="button" data-toggle="dropdown">
						@{
							var user = _userMaanager.GetUserAsync(User).Result;

							if (_signInMaanager.IsSignedIn(User))
							{

								<span class="user-icon">
									<img src="@user!.ProfileImage" alt="">
								</span>
								<span class="user-name">@user.FullName</span>
							}
						}


					</a>
					<div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
						<a class="dropdown-item" asp-action="Profile"><i class="dw dw-user1"></i> Profile</a>
						<a class="dropdown-item" asp-action=""><i class="dw dw-settings2"></i> Setting</a>
						<a class="dropdown-item" asp-action=""><i class="dw dw-help"></i> Help</a>
						<a class="dropdown-item" asp-area="Identity" asp-controller="Account" asp-action="Logout"><i class="dw dw-logout"></i> Log Out</a>
					</div>
				</div>
			</div>
			<div class="github-link">
				<a href="https://github.com/dropways/deskapp" target="_blank"><img src="vendors/images/github.svg" alt=""></a>
			</div>
		</div>
	</div>
	<div class="mt-5 container-fluid mt-5 d-flex justify-content-center align-items-center">
        @RenderBody()
    </div>
	<script src="~/YiniDashboard/vendors/scripts/core.js"></script>
	<script src="~/YiniDashboard/vendors/scripts/script.min.js"></script>
	<script src="~/YiniDashboard/vendors/scripts/process.js"></script>
	<script src="~/YiniDashboard/vendors/scripts/layout-settings.js"></script>
	<script src="~/YiniDashboard/src/plugins/apexcharts/apexcharts.min.js"></script>
	<script src="~/YiniDashboard/src/plugins/datatables/js/jquery.dataTables.min.js"></script>
	<script src="~/YiniDashboard/src/plugins/datatables/js/dataTables.bootstrap4.min.js"></script>
	<script src="~/YiniDashboard/src/plugins/datatables/js/dataTables.responsive.min.js"></script>
	<script src="~/YiniDashboard/src/plugins/datatables/js/responsive.bootstrap4.min.js"></script>
	<script src="~/YiniDashboard/vendors/scripts/dashboard.js"></script>
</body>
</html>
